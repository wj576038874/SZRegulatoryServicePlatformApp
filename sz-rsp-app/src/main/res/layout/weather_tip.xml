<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tip"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_weatherTianqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多云"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_weatherQiwen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weatherTianqi"
        android:gravity="center"
        android:text="11~12"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_weather_Fengli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weatherQiwen"
        android:gravity="center"
        android:text="微风"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_weather_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weather_Fengli"
        android:gravity="center"
        android:text="城镇"
        android:textSize="@dimen/small_text_size" />

</RelativeLayout>