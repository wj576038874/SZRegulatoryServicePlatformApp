<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:background="@drawable/btn_normal_bg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="处理措施"
        android:layout_width="100dp"
        android:layout_height="30dp" />
    <CheckBox
        android:id="@+id/disposal_decision_ck1"
        android:layout_marginLeft="10dp"
        android:text="正常"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"/>

    <CheckBox
        android:id="@+id/disposal_decision_ck2"
        android:layout_marginLeft="10dp"
        android:text="行政处罚"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"/>
    <CheckBox
        android:id="@+id/disposal_decision_ck3"
        android:layout_marginLeft="10dp"
        android:text="转为FSC"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"/>
    <CheckBox
        android:id="@+id/disposal_decision_ck4"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="纳入安全隐患"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B2B2B2"
        />
    <LinearLayout
        android:background="@drawable/dialog_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp">



        <Button
            android:background="@color/translucent"
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@drawable/selector_pickerminuteview_btn"
            android:textSize="17sp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#B2B2B2"
            ></View>
        <Button
            android:background="@color/translucent"
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="确认"
            android:textColor="@drawable/selector_pickerminuteview_btn"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>
