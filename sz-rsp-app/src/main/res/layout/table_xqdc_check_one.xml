<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg"

    android:orientation="vertical">

    <include
        android:id="@+id/xqdc_check_one_title"
        layout="@layout/title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="检查内容"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="@string/table_xqdc_check_hint"
                    android:textColor="#666"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="船体"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/xqdc_check_one_rg1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg1_rb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_hege"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg1_rb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_buhege"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg1_rb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                            android:button="@null" />
                    </RadioGroup>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="载重线"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/xqdc_check_one_rg2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg2_rb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_hege"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg2_rb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_buhege"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg2_rb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                            android:button="@null" />
                    </RadioGroup>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="船名"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/xqdc_check_one_rg3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg3_rb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_hege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg3_rb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_buhege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg3_rb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                                android:button="@null" />
                        </RadioGroup>
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="国旗"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/xqdc_check_one_rg4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg4_rb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_hege"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg4_rb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_buhege"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/xqdc_check_one_rg4_rb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                            android:button="@null" />
                    </RadioGroup>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="渡船识别标示"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/xqdc_check_one_rg5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg5_rb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_hege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg5_rb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_buhege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg5_rb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                                android:button="@null" />
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="乘客定额标示"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/xqdc_check_one_rg6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg6_rb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_hege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg6_rb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_buhege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg6_rb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                                android:button="@null" />
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="安全管理制度标示"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/xqdc_check_one_rg7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg7_rb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_hege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg7_rb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_buhege"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/xqdc_check_one_rg7_rb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@drawable/xqdc_radio_bushiyong"
                                android:button="@null" />
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="不符合项目简述"
                android:textColor="#666"
                android:textSize="15sp"

                />

            <EditText
                android:id="@+id/xqdc_check_one_edit_bfhxjs"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请填写简述"
                android:padding="10dp"
                android:textColor="#333"
                android:textColorHint="#999"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="处理意见"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/xqdc_check_one_edit_clyj"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请填写处理意见"
                android:padding="10dp"
                android:textColor="#333"
                android:textColorHint="#999"
                android:textSize="17sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>