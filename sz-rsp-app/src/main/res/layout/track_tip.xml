<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tip"
    android:gravity="center">

    <TextView
        android:id="@+id/track_tv_hs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shipName"
        android:gravity="center"
        android:text="航速"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/track_tv_hx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_tv_hs"
        android:gravity="center"
        android:text="航向"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/track_tv_sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_tv_hx"
        android:gravity="center"
        android:text="时间"
        android:textSize="12sp" />

</RelativeLayout>