<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:background="@drawable/message_bg"
        android:id="@+id/msg_Relativelayout_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/msg_LinearLayout_msg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/message_title_bg"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/zhengshureason_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:gravity="center"
                android:text="专项检查"
                android:textColor="#333"
                android:textSize="15sp" />
            <ImageButton
                android:background="@drawable/table_pop_cancel_btn"
                android:id="@+id/zxjc_cancel_btn"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/network_error_close" />
        </RelativeLayout>

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/zxjc_check_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="普通安全检查"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="50dp"
                        android:background="@color/view_line_color" />

                <CheckBox
                    android:id="@+id/zxjc_check_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="开航前检查"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="50dp"
                        android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="境外检查"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="50dp"
                        android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="入厦船舶专项检查"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="中小型船舶专项检查"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="入青船舶专项检查"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="客运船舶安全大检查"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_8"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="船舶检验质量监督检查"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/view_line_color" />
                <CheckBox
                    android:id="@+id/zxjc_check_9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="其他"/>

                <EditText
                    android:id="@+id/zxjc_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:background="#edeef2"
                    android:gravity="top"
                    android:hint="请填写其他"
                    android:padding="5dp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/view_line_color" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>











    <RelativeLayout
        android:id="@+id/msg_rl_operate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/msg_Relativelayout_msg_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/message_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/zxjc_tv_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="#0091ff"
            android:textSize="15sp" />

        <!--<TextView-->
            <!--android:id="@+id/table_pop_tv_cancel"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:clickable="true"-->
            <!--android:gravity="center_vertical|right"-->
            <!--android:text="取消"-->
            <!--android:textSize="15sp"-->
            <!--android:textColor="#0091ff" />-->
    </RelativeLayout>


</RelativeLayout>