<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/distance_a"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="1000米"
            android:textColor="@color/near_bg_text" />

        <ImageButton
            android:id="@+id/img_dis_a"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@mipmap/icon_thys_checked"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/distance_b"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2000米"
            android:textColor="@color/near_bg_text" />

        <ImageButton
            android:id="@+id/img_dis_b"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@mipmap/icon_thys_checked"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/distance_c"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="5000米"
            android:textColor="@color/near_bg_text" />

        <ImageButton
            android:id="@+id/img_dis_c"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@mipmap/icon_thys_checked"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>