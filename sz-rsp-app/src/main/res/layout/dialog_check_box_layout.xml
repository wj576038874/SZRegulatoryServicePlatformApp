<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/msg_Relativelayout_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/message_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/msg_LinearLayout_msg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/message_title_bg">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="航 道 名 称"
                android:textColor="#333"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/but_close"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/table_pop_cancel_btn"
                android:src="@mipmap/network_error_close" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"/>

                <!--<CheckBox-->
                    <!--android:id="@+id/ckItem1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="30dp"-->
                    <!--android:layout_marginEnd="10dp"-->
                    <!--android:minHeight="30dp"-->
                    <!--android:paddingStart="10dp"-->
                    <!--android:paddingEnd="10dp"-->
                    <!--android:text="大亚湾核电站码头进港航道"-->
                    <!--android:textSize="15sp" />-->
        </ScrollView>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/msg_rl_operate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/msg_Relativelayout_msg_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/message_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/but_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="#0091ff"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>