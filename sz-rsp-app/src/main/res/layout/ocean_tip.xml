<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tip"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_OceanweatherTianqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多云"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_OceanweatherFenxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_OceanweatherTianqi"
        android:gravity="center"
        android:text="风向"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_Oceanweather_Nengjiandu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_OceanweatherFenxiang"
        android:gravity="center"
        android:text="能见度"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_Oceanweather_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Oceanweather_Nengjiandu"
        android:gravity="center"
        android:text="区域名称"
        android:textSize="12sp" />

</RelativeLayout>