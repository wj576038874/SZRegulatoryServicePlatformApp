<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f8fe"
        ></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        >
        <TextView
            android:id="@+id/message_center_tv_title"
            android:textColor="#333"
            android:gravity="center"
            android:text="船舶安全检查"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/message_center_tv_isread"
            android:textColor="#fe4534"
            android:gravity="center"
            android:text="未读"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:textSize="14sp"
            android:layout_height="36dp" />

    </RelativeLayout>
    
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ececec"/>
        <TextView
            android:layout_marginRight="50dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/message_center_tv_content"
            android:textColor="#333"
            android:text="未读"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/message_center_rl_voice"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/message_center_iv_voice"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_voice"/>
            <TextView
                android:layout_toRightOf="@id/message_center_iv_voice"
                android:layout_marginLeft="5dp"
                android:id="@+id/message_center_tv_voiceLong"
                android:textColor="#333"
                android:text="15s"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/message_center_tv_time"
            android:textColor="#666"
            android:text="2017-10-08"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>





</LinearLayout>