<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="任务详情"
        android:textColor="#333333"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edeef2"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选任务"
            android:textColor="#3286FE"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:minHeight="80dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="任务日期"
        android:textColor="#333333"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/assign_tv_start_time"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/table_edt_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="开始时间"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/assign_tv_zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/assign_tv_start_time"
            android:text="至"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/assign_tv_zhi"
            android:background="@drawable/table_edt_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="结束时间"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="清单"
            android:textColor="#333333"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/assign_tv_accept_bm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="接收部门"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/assign_tv_accept_bm"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/assign_tv_accept_bm_title"
            android:background="@drawable/table_edt_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="部门名称"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/assign_tv_accept_person"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/table_edt_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="接收人"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/assign_tv_accept_person"
            android:text="接收人"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>