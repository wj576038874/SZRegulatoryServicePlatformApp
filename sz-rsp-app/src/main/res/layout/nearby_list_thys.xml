<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff0f4"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/near_thys_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/nearby_list_item_name_thy"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="限速区域"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/near_juli_thys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="1.5KM"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="类型："
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/near_thys_lx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AIS基站"
                android:textColor="#666"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="机构："
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/near_thys_jg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="内港海事处"
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/near_thys_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:text="详情       >"
                android:textColor="@color/near_thys_bg_text"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>